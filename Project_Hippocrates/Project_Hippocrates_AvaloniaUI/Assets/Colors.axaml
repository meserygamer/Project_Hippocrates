<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Design.PreviewWith>
    <Border Padding="20">
      <Grid>

        <Grid.RowDefinitions>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
          <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Rectangle Grid.Row="0"
                   Height="30" Width="30"
                   Fill="{StaticResource PrimaryBrush}"/>

        <Rectangle Grid.Row="1"
                   Height="30" Width="30"
                   Fill="{StaticResource AccentBrush}"/>

        <Rectangle Grid.Row="2"
                   Height="30" Width="30"
                   Fill="{StaticResource SecondaryBrush}"/>
        
      </Grid>
    </Border>
  </Design.PreviewWith>
  
  <SolidColorBrush x:Key="PrimaryBrush" Color="#3F51B5"/>
  <SolidColorBrush x:Key="AccentBrush" Color="#FF5722"/>
  <SolidColorBrush x:Key="SecondaryBrush" Color="#C5CAE9"/>
  
</ResourceDictionary>
